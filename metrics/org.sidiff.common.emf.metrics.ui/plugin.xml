<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.sidiff.ui.category"
            class="org.sidiff.common.emf.metrics.ui.views.MetricsView"
            icon="icons/metrics.png"
            id="org.sidiff.common.emf.metrics.ui.views.MetricsView"
            name="Metrics"
            restorable="true">
      </view>
      <view
            category="org.sidiff.ui.category"
            class="org.sidiff.common.emf.metrics.ui.views.MetricsDifferencesView"
            icon="icons/metrics_differences.png"
            id="org.sidiff.common.emf.metrics.ui.views.MetricsDifferencesView"
            name="Metrics Differences"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.sidiff.common.emf.metrics.ui.OpenMetricsViewCommand"
               icon="icons/metrics.png"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.common.emf.metrics.ui.handlers.OpenMetricsViewHandler"
            commandId="org.sidiff.common.emf.metrics.ui.OpenMetricsViewCommand">
         <enabledWhen>
            <with
                  variable="selection">
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="org.eclipse.emf.common.notify.Notifier">
                     </instanceof>
                  </iterate>
               </and>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            description="Show the SiDiff Metrics View for the current selection."
            id="org.sidiff.common.emf.metrics.ui.OpenMetricsViewCommand"
            name="Open Metrics View">
      </command>
   </extension>

</plugin>
